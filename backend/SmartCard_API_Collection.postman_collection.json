							"",
							"pm.test(\"Response has SALT data\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success', true);",
							"    pm.expect(jsonData).to.have.property('data');",
							"    pm.expect(jsonData.data).to.have.property('userSalt');",
							"    pm.expect(jsonData.data).to.have.property('adminSalt');",
							"});",
							"",
							"// Lưu SALT để sử dụng cho các request khác",
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.success && jsonData.data) {",
							"        pm.collectionVariables.set(\"userSalt\", jsonData.data.userSalt);",
							"        pm.collectionVariables.set(\"adminSalt\", jsonData.data.adminSalt);",
							"    }",
							"}"
