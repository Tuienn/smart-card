<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.desktopapp.controller.PaymentClientController"
            styleClass="root">

    <top>
        <HBox styleClass="top-bar">
            <padding>
                <Insets top="20" right="30" bottom="10" left="30"/>
            </padding>
            <Button styleClass="btn-back" onAction="#handleBack">
                <graphic>
                    <HBox alignment="CENTER" spacing="8">
                        <FontIcon iconLiteral="fas-arrow-left" iconSize="16" styleClass="icon-white"/>
                        <Label text="Quay lại" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="main-container" style="-fx-padding: 5 30 20 30;">

            <!-- Header -->
            <VBox alignment="CENTER" spacing="4">
                <StackPane style="-fx-background-color: rgba(16, 185, 129, 0.2); -fx-background-radius: 50; -fx-min-width: 60; -fx-min-height: 60; -fx-max-width: 60; -fx-max-height: 60;">
                    <FontIcon iconLiteral="fas-wallet" iconSize="30" styleClass="icon-success"/>
                </StackPane>
                <Label text="THANH TOÁN" styleClass="title-large" style="-fx-font-size: 22px;"/>
            </VBox>

            <!-- Game Info Card -->
            <VBox alignment="CENTER" spacing="8" styleClass="coin-display" style="-fx-min-width: 340px; -fx-max-width: 450px; -fx-padding: 12 16;">
                <HBox alignment="CENTER" spacing="8">
                    <FontIcon iconLiteral="fas-gamepad" iconSize="18" styleClass="icon-warning"/>
                    <Label fx:id="gameInfoLabel" 
                           text="Trò chơi: Game Name\nGiá: 100 coins" 
                           styleClass="text-primary"
                           textAlignment="CENTER"
                           wrapText="true"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <!-- PIN Entry Card -->
            <VBox alignment="CENTER" spacing="10" styleClass="glass-panel" style="-fx-min-width: 340px; -fx-max-width: 450px; -fx-padding: 16 25;">
                
                <Label text="Nhập mã PIN" styleClass="title-medium" style="-fx-font-size: 16px;"/>

                <!-- PIN Keypad Component -->
                <fx:include source="components/pin-keypad.fxml" fx:id="pinKeypad"/>

                <!-- Progress Indicator -->
                <ProgressIndicator fx:id="loadingIndicator" 
                                  prefWidth="35" 
                                  prefHeight="35" 
                                  visible="false"
                                  styleClass="loading-spinner"/>

                <!-- Status Label -->
                <Label fx:id="statusLabel" 
                       text="" 
                       styleClass="text-secondary"
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-min-height: 18px;"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
