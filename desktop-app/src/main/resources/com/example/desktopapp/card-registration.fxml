<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.desktopapp.controller.CardRegistrationController"
            styleClass="root">
    
    <!-- Header with Progress Steps -->
    <top>
        <VBox alignment="CENTER" spacing="12" style="-fx-padding: 15 30 10 30;">
            <!-- Home Button -->
            <HBox alignment="CENTER_LEFT">
                <Button styleClass="btn, btn-secondary" onAction="#onGoHome" style="-fx-min-width: 100; -fx-min-height: 35;">
                    <graphic><FontIcon iconLiteral="fas-home" iconSize="12" styleClass="icon-primary"/></graphic>
                    <text> Trang chủ</text>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="8" fx:id="stepIndicator">
                <!-- Step 1: Đăng ký thông tin -->
                <Label text="1" styleClass="step-indicator, step-active" fx:id="step1Label" style="-fx-font-size: 14px; -fx-padding: 6 18;"/>
                <FontIcon iconLiteral="fas-arrow-right" iconSize="16" styleClass="step-arrow"/>
                
                <!-- Step 2: Nhập PIN -->
                <Label text="2" styleClass="step-indicator, step-inactive" fx:id="step2Label" style="-fx-font-size: 14px; -fx-padding: 6 18;"/>
                <FontIcon iconLiteral="fas-arrow-right" iconSize="16" styleClass="step-arrow"/>
                
                <!-- Step 3: Nạp tiền -->
                <Label text="3" styleClass="step-indicator, step-inactive" fx:id="step3Label" style="-fx-font-size: 14px; -fx-padding: 6 18;"/>
                <FontIcon iconLiteral="fas-arrow-right" iconSize="16" styleClass="step-arrow"/>
                
                <!-- Step 4: Ghi thẻ -->
                <Label text="4" styleClass="step-indicator, step-inactive" fx:id="step4Label" style="-fx-font-size: 14px; -fx-padding: 6 18;"/>
                <FontIcon iconLiteral="fas-arrow-right" iconSize="16" styleClass="step-arrow"/>
                
                <!-- Step 5: Hoàn thành -->
                <Label text="5" styleClass="step-indicator, step-inactive" fx:id="step5Label" style="-fx-font-size: 14px; -fx-padding: 6 18;"/>
            </HBox>
            
            <Label fx:id="stepTitle" text="Đăng ký thông tin" styleClass="title-small"/>
        </VBox>
    </top>
    
    <!-- Main Content Area with Scroll -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                    styleClass="scroll-pane" style="-fx-background: transparent; -fx-background-color: transparent;">
            <StackPane fx:id="contentStack" style="-fx-padding: 0 40 10 40;">
                
                <!-- STEP 1: User Registration Form -->
                <VBox fx:id="step1Content" alignment="CENTER" spacing="15" visible="true">
                    <VBox styleClass="card-container" spacing="15" maxWidth="600">
                        
                        <!-- Avatar Upload -->
                        <HBox alignment="CENTER">
                            <StackPane fx:id="avatarContainer" styleClass="avatar-placeholder" 
                                       onMouseClicked="#onAvatarClick">
                                <ImageView fx:id="avatarImage" fitWidth="110" fitHeight="110" preserveRatio="true">
                                    <clip>
                                        <Circle radius="55" centerX="55" centerY="55"/>
                                    </clip>
                                </ImageView>
                                <FontIcon fx:id="avatarPlaceholderText" iconLiteral="fas-camera" iconSize="36" 
                                       visible="true" styleClass="icon-secondary"/>
                            </StackPane>
                        </HBox>
                        <Label text="Nhấn để chọn ảnh đại diện" styleClass="text-secondary" 
                               style="-fx-font-size: 14px;" textAlignment="CENTER" alignment="CENTER" maxWidth="Infinity"/>
                        
                        <!-- Name Field -->
                        <VBox spacing="8">
                            <Label text="Họ và tên" styleClass="form-label"/>
                            <TextField fx:id="nameField" promptText="Nhập họ tên của bạn" 
                                       styleClass="text-field"/>
                        </VBox>
                        
                        <!-- Age Field -->
                        <VBox spacing="8">
                            <Label text="Tuổi" styleClass="form-label"/>
                            <TextField fx:id="ageField" promptText="Nhập tuổi của bạn" 
                                       styleClass="text-field"/>
                        </VBox>
                        
                        <!-- Gender Selection -->
                        <VBox spacing="8">
                            <Label text="Giới tính" styleClass="form-label"/>
                            <HBox styleClass="gender-toggle" spacing="0" alignment="CENTER">
                                <ToggleButton fx:id="maleBtn" onAction="#onGenderSelect" userData="1">
                                    <graphic><FontIcon iconLiteral="fas-mars" iconSize="16" styleClass="icon-white"/></graphic>
                                    <text> Nam</text>
                                </ToggleButton>
                                <ToggleButton fx:id="femaleBtn" onAction="#onGenderSelect" userData="2">
                                    <graphic><FontIcon iconLiteral="fas-venus" iconSize="16" styleClass="icon-white"/></graphic>
                                    <text> Nữ</text>
                                </ToggleButton>
                            </HBox>
                        </VBox>
                        
                    </VBox>
                </VBox>
                
                <!-- STEP 2: PIN Input with Keypad -->
                <VBox fx:id="step2Content" alignment="CENTER" spacing="15" visible="false">
                    <VBox styleClass="card-container" spacing="15" maxWidth="450" alignment="CENTER">
                        
                        <HBox alignment="CENTER" spacing="10">
                            <FontIcon iconLiteral="fas-lock" iconSize="24" styleClass="icon-primary"/>
                            <Label text="Tạo mã PIN" styleClass="title-small"/>
                        </HBox>
                        <Label text="Nhập mã PIN 6 số để bảo vệ thẻ của bạn" styleClass="text-secondary"/>
                        
                        <!-- PIN Display (6 dots) -->
                        <HBox alignment="CENTER" spacing="15" fx:id="pinDotsContainer">
                            <Label fx:id="pinDot1" styleClass="pin-dot, pin-dot-empty"/>
                            <Label fx:id="pinDot2" styleClass="pin-dot, pin-dot-empty"/>
                            <Label fx:id="pinDot3" styleClass="pin-dot, pin-dot-empty"/>
                            <Label fx:id="pinDot4" styleClass="pin-dot, pin-dot-empty"/>
                            <Label fx:id="pinDot5" styleClass="pin-dot, pin-dot-empty"/>
                            <Label fx:id="pinDot6" styleClass="pin-dot, pin-dot-empty"/>
                        </HBox>
                        
                        <!-- Numeric Keypad -->
                        <GridPane hgap="15" vgap="15" alignment="CENTER" fx:id="keypadGrid">
                            <!-- Row 1: 1, 2, 3 -->
                            <Button text="1" styleClass="keypad-btn" onAction="#onKeypadPress" userData="1"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Button text="2" styleClass="keypad-btn" onAction="#onKeypadPress" userData="2"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            <Button text="3" styleClass="keypad-btn" onAction="#onKeypadPress" userData="3"
                                    GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                            
                            <!-- Row 2: 4, 5, 6 -->
                            <Button text="4" styleClass="keypad-btn" onAction="#onKeypadPress" userData="4"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Button text="5" styleClass="keypad-btn" onAction="#onKeypadPress" userData="5"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            <Button text="6" styleClass="keypad-btn" onAction="#onKeypadPress" userData="6"
                                    GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            
                            <!-- Row 3: 7, 8, 9 -->
                            <Button text="7" styleClass="keypad-btn" onAction="#onKeypadPress" userData="7"
                                    GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <Button text="8" styleClass="keypad-btn" onAction="#onKeypadPress" userData="8"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            <Button text="9" styleClass="keypad-btn" onAction="#onKeypadPress" userData="9"
                                    GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                            
                            <!-- Row 4: Clear All, 0, Backspace -->
                            <Button styleClass="keypad-btn, keypad-btn-action" onAction="#onPinClearAll"
                                    GridPane.columnIndex="0" GridPane.rowIndex="3">
                                <graphic><FontIcon iconLiteral="fas-trash-alt" iconSize="18"/></graphic>
                            </Button>
                            <Button text="0" styleClass="keypad-btn" onAction="#onKeypadPress" userData="0"
                                    GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            <Button styleClass="keypad-btn, keypad-btn-action" onAction="#onPinBackspace"
                                    GridPane.columnIndex="2" GridPane.rowIndex="3">
                                <graphic><FontIcon iconLiteral="fas-backspace" iconSize="18"/></graphic>
                            </Button>
                        </GridPane>
                        
                        <!-- PIN Instruction -->
                        <Label fx:id="pinInstructionLabel" text="Nhập mã PIN 6 số" styleClass="pin-instruction"/>
                    </VBox>
                </VBox>
                
                <!-- STEP 3: Payment Type Selection -->
                <VBox fx:id="step3Content" alignment="CENTER" spacing="30" visible="false">
                    <VBox styleClass="card-container" spacing="30" maxWidth="750">
                        
                        <HBox alignment="CENTER" spacing="10">
                            <FontIcon iconLiteral="fas-shopping-cart" iconSize="24" styleClass="icon-primary"/>
                            <Label text="Chọn hình thức nạp" styleClass="title-small"/>
                        </HBox>
                        
                        <!-- Payment Type Toggle -->
                        <HBox alignment="CENTER" spacing="20">
                            <Button fx:id="buyCoinsBtn" text="MUA COINS" styleClass="btn, btn-primary" 
                                    onAction="#onSelectBuyCoins" style="-fx-min-width: 200; -fx-min-height: 50;">
                                <graphic><FontIcon iconLiteral="fas-coins" iconSize="18" styleClass="icon-white"/></graphic>
                            </Button>
                            <Button fx:id="buyComboBtn" text="MUA COMBO" styleClass="btn, btn-secondary" 
                                    onAction="#onSelectBuyCombo" style="-fx-min-width: 200; -fx-min-height: 50;">
                                <graphic><FontIcon iconLiteral="fas-box-open" iconSize="18" styleClass="icon-white"/></graphic>
                            </Button>
                        </HBox>
                        
                        <!-- Coins Section -->
                        <VBox fx:id="coinsSection" alignment="CENTER" spacing="25">
                            <Label text="Nạp xu và chơi theo cách bạn muốn" styleClass="subtitle"/>
                            
                            <!-- Amount Buttons Grid -->
                            <GridPane hgap="20" vgap="20" alignment="CENTER">
                                <Button text="100,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="100000"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Button text="200,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="200000"
                                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Button text="300,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="300000"
                                        GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                <Button text="500,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="500000"
                                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <Button text="1,000,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="1000000"
                                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Button text="Khác" styleClass="btn, amount-btn" 
                                        onAction="#onCustomAmount"
                                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            </GridPane>
                            
                            <!-- Custom Amount Input -->
                            <VBox fx:id="customAmountBox" spacing="8" visible="false" managed="false">
                                <Label text="Nhập số tiền (VNĐ)" styleClass="form-label"/>
                                <TextField fx:id="customAmountField" promptText="Ví dụ: 150000" 
                                           styleClass="text-field"/>
                            </VBox>
                            
                            <!-- Coin Display -->
                            <VBox styleClass="coin-display" alignment="CENTER" spacing="10">
                                <Label text="Bạn sẽ nhận được" styleClass="text-secondary"/>
                                <HBox alignment="CENTER" spacing="15">
                                    <Label fx:id="coinDisplay" text="0" styleClass="coin-amount"/>
                                    <HBox alignment="CENTER" spacing="5">
                                        <FontIcon iconLiteral="fas-coins" iconSize="24" styleClass="icon-warning"/>
                                        <Label text="COINS" style="-fx-font-size: 24px; -fx-text-fill: #fbbf24;"/>
                                    </HBox>
                                </HBox>
                                <Label text="(10,000đ = 1 Coin)" styleClass="text-secondary" style="-fx-font-size: 14px;"/>
                            </VBox>
                            
                            <!-- Selected Amount Display -->
                            <Label fx:id="selectedAmountLabel" text="" styleClass="text-secondary" 
                                   style="-fx-font-size: 18px;"/>
                        </VBox>
                        
                        <!-- Combo Section -->
                        <VBox fx:id="comboSection" alignment="CENTER" spacing="25" visible="false" managed="false">
                            <Label text="Chọn combo ưu đãi (có thể chọn nhiều)" styleClass="subtitle"/>
                            
                            <!-- Combo List (ScrollPane for dynamic combos) -->
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="400" 
                                        style="-fx-background: transparent; -fx-background-color: transparent;">
                                <VBox fx:id="comboListContainer" spacing="15" alignment="CENTER"/>
                            </ScrollPane>
                            
                            <!-- Loading indicator -->
                            <HBox fx:id="comboLoadingBox" alignment="CENTER" spacing="10" visible="false">
                                <ProgressIndicator style="-fx-max-width: 30; -fx-max-height: 30;"/>
                                <Label text="Đang tải danh sách combo..." styleClass="text-secondary"/>
                            </HBox>
                            
                            <!-- Error message -->
                            <Label fx:id="comboErrorLabel" text="" styleClass="text-secondary" 
                                   style="-fx-text-fill: #ef4444;" visible="false"/>
                        </VBox>
                        
                    </VBox>
                </VBox>
                
                <!-- STEP 4: Card Writing -->
                <VBox fx:id="step4Content" alignment="CENTER" spacing="30" visible="false">
                    <VBox styleClass="card-container" spacing="30" maxWidth="600" alignment="CENTER">
                        
                        <HBox alignment="CENTER" spacing="10">
                            <FontIcon iconLiteral="fas-credit-card" iconSize="24" styleClass="icon-primary"/>
                            <Label text="Ghi dữ liệu vào thẻ" styleClass="title-small"/>
                        </HBox>
                        
                        <!-- Card Animation Area -->
                        <StackPane style="-fx-min-height: 200;">
                            <!-- Waiting state -->
                            <VBox fx:id="cardWaitingState" alignment="CENTER" spacing="20">
                                <FontIcon iconLiteral="fas-mobile-alt" iconSize="80" styleClass="icon-primary"/>
                                <Label text="Đặt thẻ lên đầu đọc" styleClass="subtitle"/>
                                <Label text="Đảm bảo thẻ được đặt đúng vị trí" styleClass="text-secondary"/>
                            </VBox>
                            
                            <!-- Writing state -->
                            <VBox fx:id="cardWritingState" alignment="CENTER" spacing="20" visible="false">
                                <ProgressIndicator fx:id="writeProgress" styleClass="loading-spinner" 
                                                   style="-fx-min-width: 80; -fx-min-height: 80;"/>
                                <Label fx:id="writeStatusLabel" text="Đang ghi dữ liệu..." styleClass="subtitle"/>
                            </VBox>
                            
                            <!-- Success state -->
                            <VBox fx:id="cardSuccessState" alignment="CENTER" spacing="20" visible="false">
                                <FontIcon iconLiteral="fas-check-circle" iconSize="80" styleClass="icon-success"/>
                                <Label text="Ghi thẻ thành công!" styleClass="subtitle" style="-fx-text-fill: #22c55e;"/>
                            </VBox>
                            
                            <!-- Error state -->
                            <VBox fx:id="cardErrorState" alignment="CENTER" spacing="20" visible="false">
                                <FontIcon iconLiteral="fas-times-circle" iconSize="80" styleClass="icon-danger"/>
                                <Label fx:id="errorMessageLabel" text="Có lỗi xảy ra" styleClass="subtitle" 
                                       style="-fx-text-fill: #ef4444;"/>
                            </VBox>
                        </StackPane>
                        
                        <!-- Write Card Button -->
                        <Button fx:id="writeCardBtn" styleClass="btn, btn-primary, btn-large" onAction="#onWriteCard">
                            <graphic><FontIcon iconLiteral="fas-lock" iconSize="16" styleClass="icon-white"/></graphic>
                            <text> BẮT ĐẦU GHI THẺ</text>
                        </Button>
                    </VBox>
                </VBox>
                
                <!-- STEP 5: Success -->
                <VBox fx:id="step5Content" alignment="CENTER" spacing="30" visible="false">
                    <VBox styleClass="success-card" spacing="30" maxWidth="600" alignment="CENTER">
                        
                        <FontIcon iconLiteral="fas-gift" iconSize="80" styleClass="icon-success"/>
                        <Label text="ĐĂNG KÝ THÀNH CÔNG!" styleClass="title-medium" style="-fx-text-fill: #22c55e;"/>
                        
                        <!-- User Summary -->
                        <VBox styleClass="glass-panel" spacing="15" alignment="CENTER_LEFT">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <FontIcon iconLiteral="fas-user" iconSize="16" styleClass="icon-secondary"/>
                                <Label text="Tên:" styleClass="text-secondary"/>
                                <Label fx:id="summaryName" text="" styleClass="text-primary"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <FontIcon iconLiteral="fas-birthday-cake" iconSize="16" styleClass="icon-secondary"/>
                                <Label text="Tuổi:" styleClass="text-secondary"/>
                                <Label fx:id="summaryAge" text="" styleClass="text-primary"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <FontIcon iconLiteral="fas-coins" iconSize="16" styleClass="icon-warning"/>
                                <Label text="Coins:" styleClass="text-secondary"/>
                                <Label fx:id="summaryCoins" text="" styleClass="text-accent"/>
                            </HBox>
                        </VBox>
                        
                        <Label text="Bạn có thể sử dụng thẻ này tại các máy game trong khu vui chơi" 
                               styleClass="text-secondary" wrapText="true" textAlignment="CENTER"/>
                    </VBox>
                </VBox>
                
            </StackPane>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 15 40;">
            <Button fx:id="backBtn" styleClass="btn, btn-secondary" onAction="#onBack" visible="false">
                <graphic><FontIcon iconLiteral="fas-arrow-left" iconSize="14" styleClass="icon-white"/></graphic>
                <text> Quay lại</text>
            </Button>
            <Button fx:id="nextBtn" styleClass="btn, btn-primary" onAction="#onNext">
                <text>Tiếp tục </text>
                <graphic><FontIcon iconLiteral="fas-arrow-right" iconSize="14" styleClass="icon-white"/></graphic>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
