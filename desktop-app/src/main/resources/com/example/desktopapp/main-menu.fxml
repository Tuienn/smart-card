<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.desktopapp.controller.MainMenuController"
            styleClass="root">
    
    <center>
        <VBox alignment="CENTER" spacing="40" styleClass="main-container" style="-fx-padding: 20;">
            
            <!-- Header with Icon -->
            <VBox alignment="CENTER" spacing="15">
                <StackPane styleClass="main-icon-container">
                    <FontIcon iconLiteral="fas-gamepad" iconSize="64" styleClass="icon-primary"/>
                </StackPane>
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Khu vui chơi giải trí" styleClass="title-large"/>
                    <Label text="Hệ thống quản lý thẻ thông minh" styleClass="subtitle"/>
                </VBox>
            </VBox>
            
            <!-- Card Check Section -->
            <VBox alignment="CENTER" spacing="20" styleClass="check-card-section">
                <VBox alignment="CENTER" spacing="12" styleClass="glass-panel" style="-fx-padding: 25 40;">
                    <!-- Instruction -->
                    <HBox alignment="CENTER" spacing="10">
                        <FontIcon iconLiteral="fas-info-circle" iconSize="18" styleClass="icon-primary"/>
                        <Label text="Vui lòng đặt thẻ vào đầu đọc" styleClass="subtitle" style="-fx-font-size: 16px;"/>
                    </HBox>
                    
                    <!-- Check Button -->
                    <Button styleClass="btn-primary, btn-large" onAction="#onCheckCard" style="-fx-min-width: 280px;">
                        <graphic>
                            <HBox alignment="CENTER" spacing="12">
                                <FontIcon iconLiteral="fas-id-card" iconSize="24" styleClass="icon-white"/>
                                <Label text="KIỂM TRA THẺ" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </HBox>
                        </graphic>
                    </Button>
                    
                    <!-- Status Label -->
                    <VBox alignment="CENTER" style="-fx-min-height: 30;">
                        <Label fx:id="statusLabel" styleClass="text-secondary" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
                    </VBox>
                </VBox>
                
                <!-- Info Cards -->
                <HBox alignment="CENTER" spacing="16">
                    <VBox alignment="CENTER" spacing="6" styleClass="info-badge">
                        <FontIcon iconLiteral="fas-shield-alt" iconSize="24" styleClass="icon-success"/>
                        <Label text="An toàn" styleClass="text-secondary" style="-fx-font-size: 12px;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="6" styleClass="info-badge">
                        <FontIcon iconLiteral="fas-bolt" iconSize="24" styleClass="icon-warning"/>
                        <Label text="Nhanh chóng" styleClass="text-secondary" style="-fx-font-size: 12px;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="6" styleClass="info-badge">
                        <FontIcon iconLiteral="fas-check-circle" iconSize="24" styleClass="icon-primary"/>
                        <Label text="Tiện lợi" styleClass="text-secondary" style="-fx-font-size: 12px;"/>
                    </VBox>
                </HBox>
            </VBox>
            
        </VBox>
    </center>
    
</BorderPane>
