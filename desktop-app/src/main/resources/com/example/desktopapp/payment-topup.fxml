<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.desktopapp.controller.PaymentTopupController"
            styleClass="root"
            prefWidth="800" prefHeight="700">
    
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15 30 10 30;">
            <HBox alignment="CENTER_LEFT">
                <Button styleClass="btn, btn-secondary" onAction="#onCancel" style="-fx-min-width: 100; -fx-min-height: 35;">
                    <graphic><FontIcon iconLiteral="fas-arrow-left" iconSize="12" styleClass="icon-primary"/></graphic>
                    <text> Quay lại</text>
                </Button>
            </HBox>
            
            <Label fx:id="titleLabel" text="Nạp tiền vào thẻ" styleClass="title-small"/>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                    styleClass="scroll-pane" style="-fx-background: transparent; -fx-background-color: transparent;">
            <StackPane fx:id="contentStack" style="-fx-padding: 0 40 10 40;">
                
                <!-- Payment Selection -->
                <VBox fx:id="paymentState" alignment="CENTER" spacing="30" visible="true">
                    <VBox styleClass="card-container" spacing="30" maxWidth="750">
                        
                        <HBox alignment="CENTER" spacing="10">
                            <FontIcon iconLiteral="fas-shopping-cart" iconSize="24" styleClass="icon-primary"/>
                            <Label text="Chọn hình thức nạp" styleClass="title-small"/>
                        </HBox>
                        
                        <!-- Payment Type Toggle -->
                        <HBox alignment="CENTER" spacing="20">
                            <Button fx:id="buyCoinsBtn" text="MUA COINS" styleClass="btn, btn-primary" 
                                    onAction="#onSelectBuyCoins" style="-fx-min-width: 200; -fx-min-height: 50;">
                                <graphic><FontIcon iconLiteral="fas-coins" iconSize="18" styleClass="icon-white"/></graphic>
                            </Button>
                            <Button fx:id="buyComboBtn" text="MUA COMBO" styleClass="btn, btn-secondary" 
                                    onAction="#onSelectBuyCombo" style="-fx-min-width: 200; -fx-min-height: 50;">
                                <graphic><FontIcon iconLiteral="fas-box-open" iconSize="18" styleClass="icon-white"/></graphic>
                            </Button>
                        </HBox>
                        
                        <!-- Coins Section -->
                        <VBox fx:id="coinsSection" alignment="CENTER" spacing="25">
                            <Label text="Nạp xu và chơi theo cách bạn muốn" styleClass="subtitle"/>
                            
                            <!-- Amount Buttons Grid -->
                            <GridPane hgap="20" vgap="20" alignment="CENTER">
                                <Button text="100,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="100000"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Button text="200,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="200000"
                                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Button text="300,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="300000"
                                        GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                <Button text="500,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="500000"
                                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <Button text="1,000,000đ" styleClass="btn, amount-btn" 
                                        onAction="#onAmountSelect" userData="1000000"
                                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Button text="Khác" styleClass="btn, amount-btn" 
                                        onAction="#onCustomAmount"
                                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            </GridPane>
                            
                            <!-- Custom Amount Input -->
                            <VBox fx:id="customAmountBox" spacing="8" visible="false" managed="false">
                                <Label text="Nhập số tiền (VNĐ)" styleClass="form-label"/>
                                <TextField fx:id="customAmountField" promptText="Ví dụ: 150000" 
                                           styleClass="text-field"/>
                            </VBox>
                            
                            <!-- Coin Display -->
                            <VBox styleClass="coin-display" alignment="CENTER" spacing="10">
                                <Label text="Bạn sẽ nhận được" styleClass="text-secondary"/>
                                <HBox alignment="CENTER" spacing="15">
                                    <Label fx:id="coinDisplay" text="0" styleClass="coin-amount"/>
                                    <HBox alignment="CENTER" spacing="5">
                                        <FontIcon iconLiteral="fas-coins" iconSize="24" styleClass="icon-warning"/>
                                        <Label text="COINS" style="-fx-font-size: 24px; -fx-text-fill: #fbbf24;"/>
                                    </HBox>
                                </HBox>
                                <Label text="(10,000đ = 1 Coin)" styleClass="text-secondary" style="-fx-font-size: 14px;"/>
                            </VBox>
                            
                            <Label fx:id="selectedAmountLabel" text="" styleClass="text-secondary" 
                                   style="-fx-font-size: 18px;"/>
                        </VBox>
                        
                        <!-- Combo Section -->
                        <VBox fx:id="comboSection" alignment="CENTER" spacing="25" visible="false" managed="false">
                            <Label text="Chọn combo ưu đãi (có thể chọn nhiều)" styleClass="subtitle"/>
                            
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="400" 
                                        style="-fx-background: transparent; -fx-background-color: transparent;">
                                <VBox fx:id="comboListContainer" spacing="15" alignment="CENTER"/>
                            </ScrollPane>
                            
                            <HBox fx:id="comboLoadingBox" alignment="CENTER" spacing="10" visible="false">
                                <ProgressIndicator style="-fx-max-width: 30; -fx-max-height: 30;"/>
                                <Label text="Đang tải danh sách combo..." styleClass="text-secondary"/>
                            </HBox>
                            
                            <Label fx:id="comboErrorLabel" text="" styleClass="text-secondary" 
                                   style="-fx-text-fill: #ef4444;" visible="false"/>
                        </VBox>
                        
                    </VBox>
                </VBox>
                
                <!-- QR Payment & Card Writing State -->
                <VBox fx:id="writingState" alignment="CENTER" spacing="30" visible="false">
                    <VBox styleClass="card-container" spacing="30" maxWidth="600" alignment="CENTER">
                        
                        <HBox alignment="CENTER" spacing="10">
                            <FontIcon iconLiteral="fas-qrcode" iconSize="24" styleClass="icon-primary"/>
                            <Label text="Thanh toán MoMo" styleClass="title-small"/>
                        </HBox>
                        
                        <StackPane style="-fx-min-height: 350;">
                            <!-- Loading QR state -->
                            <VBox fx:id="qrLoadingState" alignment="CENTER" spacing="20" visible="true">
                                <ProgressIndicator styleClass="loading-spinner" style="-fx-min-width: 60; -fx-min-height: 60;"/>
                                <Label text="Đang tạo mã QR thanh toán..." styleClass="subtitle"/>
                            </VBox>
                            
                            <!-- QR Display state -->
                            <VBox fx:id="qrDisplayState" alignment="CENTER" spacing="15" visible="false">
                                <Label fx:id="paymentAmountLabel" text="" styleClass="subtitle" style="-fx-font-size: 18px; -fx-text-fill: #22c55e;"/>
                                <ImageView fx:id="qrImageView" fitWidth="250" fitHeight="250" preserveRatio="true"/>
                                <Label text="Quét mã QR bằng app MoMo để thanh toán" styleClass="text-secondary"/>
                                <HBox alignment="CENTER" spacing="10">
                                    <ProgressIndicator style="-fx-max-width: 20; -fx-max-height: 20;"/>
                                    <Label fx:id="paymentStatusLabel" text="Đang chờ thanh toán..." styleClass="text-secondary"/>
                                </HBox>
                            </VBox>
                            
                            <!-- Writing to Card -->
                            <VBox fx:id="writingProgress" alignment="CENTER" spacing="20" visible="false">
                                <ProgressIndicator styleClass="loading-spinner" 
                                                   style="-fx-min-width: 80; -fx-min-height: 80;"/>
                                <Label fx:id="writeStatusLabel" text="Đang ghi dữ liệu..." styleClass="subtitle"/>
                            </VBox>
                            
                            <!-- Success -->
                            <VBox fx:id="successIndicator" alignment="CENTER" spacing="20" visible="false">
                                <FontIcon iconLiteral="fas-check-circle" iconSize="80" styleClass="icon-success"/>
                                <Label text="Nạp tiền thành công!" styleClass="subtitle" style="-fx-text-fill: #22c55e;"/>
                            </VBox>
                            
                            <!-- Error -->
                            <VBox fx:id="errorIndicator" alignment="CENTER" spacing="20" visible="false">
                                <FontIcon iconLiteral="fas-times-circle" iconSize="80" styleClass="icon-danger"/>
                                <Label fx:id="errorMessageLabel" text="Có lỗi xảy ra" styleClass="subtitle" 
                                       style="-fx-text-fill: #ef4444;" wrapText="true" textAlignment="CENTER"/>
                            </VBox>
                        </StackPane>
                        
                        <HBox fx:id="actionButtons" alignment="CENTER" spacing="15" visible="false">
                            <Button styleClass="btn, btn-secondary" onAction="#onRetryPayment" style="-fx-min-width: 150;">
                                <graphic><FontIcon iconLiteral="fas-redo" iconSize="14" styleClass="icon-primary"/></graphic>
                                <text> Thử lại</text>
                            </Button>
                            <Button styleClass="btn, btn-secondary" onAction="#onCancel" style="-fx-min-width: 150;">
                                <graphic><FontIcon iconLiteral="fas-arrow-left" iconSize="14" styleClass="icon-primary"/></graphic>
                                <text> Quay lại</text>
                            </Button>
                        </HBox>
                        
                    </VBox>
                </VBox>
                
            </StackPane>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox fx:id="bottomButtons" alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 15 40;">
            <Button styleClass="btn, btn-secondary" onAction="#onCancel" style="-fx-min-width: 120;">
                <text>Hủy</text>
            </Button>
            <Button fx:id="confirmBtn" styleClass="btn, btn-primary" onAction="#onConfirm" style="-fx-min-width: 120;">
                <graphic><FontIcon iconLiteral="fas-check" iconSize="14" styleClass="icon-white"/></graphic>
                <text> XÁC NHẬN</text>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
